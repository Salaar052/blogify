<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>HomePage</title>
    <style>
        body {
            background: linear-gradient(135deg, #0d1b2a, #000000);
            color: #f8f9fa;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        h1 {
            color: #f8f9fa;
            font-weight: bold;
        }
        .card {
            background: #1b263b;
            border: none;
            border-radius: 15px;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.6);
        }
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0 25px #1e90ff;
        }
        .card-img-top {
            height: 180px;
            object-fit: cover;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
        }
        .card-title {
            color: #f8f9fa;
            font-weight: bold;
        }
        .card-text {
            color: #d1d5db;
        }
        .btn-primary {
            background: #1e90ff;
            border: none;
            border-radius: 10px;
            font-weight: bold;
            transition: all 0.3s;
        }
        .btn-primary:hover {
            background: #63b3ed;
            box-shadow: 0 0 15px #1e90ff;
        }
    </style>
</head>
<body>
    <%- include('./partials/nav') %>

    <div class="container mt-5">
        <h1 class="mb-4 text-center">Latest Blogs</h1>
        
        <div class="row g-4">
            <% blogs.forEach(blog => { %>   
                <div class="col-md-4">
                    <div class="card h-100">
                        <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="Blog Cover">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title"><%= blog.title %></h5>
                            <p class="card-text" style="flex-grow:1;">
                                <%= blog.body.substring(0, 100) %>...
                            </p>
                            <a href="/blog/<%= blog._id %>" class="btn btn-primary mt-auto">Read More</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <%- include('./partials/script') %>
</body>
<br>
<%- include('./partials/footer') %>
</html>
