<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>BlogPage</title>
    <style>
      body {
        background: linear-gradient(135deg, #0d1b2a, #000000);
        color: #f8f9fa;
        min-height: 100vh;
      }
      .blog-card {
        background: #1b263b;
        border-radius: 15px;
        padding: 2rem;
        box-shadow: 0 0 25px rgba(0, 0, 0, 0.6);
      }
      .blog-title {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 1rem;
        text-align: center;
        color: #1e90ff;
      }
      .blog-img {
        display: block;
        margin: 0 auto 1.5rem auto;
        max-width: 100%;
        border-radius: 12px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
      }
      .blog-body {
        white-space: pre-wrap; /* keeps formatting but wraps text */
        font-size: 1.05rem;
        line-height: 1.6;
        color: #e0e1dd;
      }
    </style>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <div class="container mt-5">
      <div class="blog-card">
        <h1 class="blog-title"><%= blog.title %></h1>
        <img
          src="<%= blog.coverImageURL %>"
          alt="Blog Cover"
          class="blog-img"
        />
        <div class="blog-body"><%= blog.body %></div>
      </div>

      <div class="container mt-3">
        <img src="<%= blog.createdBy.profileImage %>" height="50px" />
        <%= blog.createdBy.fullName %>
      </div>

      <% if (locals.user) { %>
      <form action="/blog/comment/<%= blog._id  %>" method="post">
        <div class="mb-2 mt-2">
          <input
            type="text"
            class="form-control"
            name="content"
            placeholder="Enter your Comment here"
          />
        </div>

        <button type="submit" class="btn btn-primary">Add</button>
      </form>

      <% } %>
    </div>

    <div class="container mt-4">
      <h1>Comments(<%= comments.length %>)</h1>
      <% comments.forEach(comment => { %>
        <img src="<%=comment.createdBy.profileImage %>" width="40px" />
        <%= comment.createdBy.fullName%>:
        <pre><%= comment.content%></pre>
      <% }); %>
    </div>

    <%- include('./partials/script') %>
  </body>
</html>
