<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Sign Up</title>
    <style>
      body {
        background: linear-gradient(135deg, #0d1b2a, #000000);
        color: #f8f9fa;
        min-height: 100vh;
        margin: 0;
        padding: 0;
        font-family: "Poppins", sans-serif;
      }

      .page-container {
        display: flex;
        justify-content: center;
        padding-top: 80px;
      }

      .auth-card {
        background: #1b263b;
        border: none;
        border-radius: 20px;
        padding: 2.5rem;
        box-shadow: 0 0 25px rgba(0, 0, 0, 0.6);
        width: 100%;
        max-width: 460px;
        animation: fadeIn 0.8s ease;
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(15px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .form-label {
        font-weight: 500;
        margin-bottom: 5px;
      }

      .form-control {
        background-color: #0d1b2a;
        border: 1px solid #415a77;
        color: #f8f9fa;
        border-radius: 8px;
        padding: 10px;
        transition: all 0.3s;
      }

      .form-control:focus {
        border-color: #1e90ff;
        box-shadow: 0 0 10px #1e90ff;
        outline: none;
      }

      /* Styled file input */
      input[type="file"] {
        display: none;
      }

      .file-label {
        display: inline-block;
        background-color: #1e90ff;
        color: white;
        padding: 10px 20px;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
      }

      .file-label:hover {
        background-color: #63b3ed;
        box-shadow: 0 0 10px #1e90ff;
      }

      .file-name {
        display: block;
        margin-top: 5px;
        font-size: 0.9rem;
        color: #9ca3af;
      }

      .btn-custom {
        background: #1e90ff;
        border: none;
        border-radius: 10px;
        width: 100%;
        padding: 0.8rem;
        font-weight: bold;
        color: white;
        margin-top: 20px;
        transition: all 0.3s;
      }

      .btn-custom:hover {
        background: #63b3ed;
        box-shadow: 0 0 15px #1e90ff;
      }

      .error {
        border-color: #ff4d4d !important;
        box-shadow: 0 0 8px #ff4d4d !important;
      }

      .alert {
        background-color: #ff4d4d;
        color: white;
        padding: 10px;
        border-radius: 8px;
        text-align: center;
        margin-bottom: 15px;
        display: none;
      }
    </style>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <div class="page-container">
      <div class="auth-card">
        <h2 class="text-center mb-4">Create Account</h2>

        <div class="alert" id="alert">⚠️ Please fill in all required fields.</div>

        <form id="signupForm" action="/user/signup" method="post" enctype="multipart/form-data">
          <div class="mb-3">
            <label class="form-label">Full Name</label>
            <input type="text" class="form-control" name="fullName" id="fullName" />
          </div>
          <div class="mb-3">
            <label class="form-label">Email Address</label>
            <input type="email" class="form-control" name="email" id="email" />
          </div>
          <div class="mb-3">
            <label class="form-label">Password</label>
            <input type="password" class="form-control" name="password" id="password" />
          </div>
          <div class="mb-3">
            <label class="form-label">Add Profile Image</label><br />
            <label for="profileImage" class="file-label">Choose Image</label>
            <input name="profileImage" type="file" id="profileImage" />
            <span class="file-name" id="fileName">No file selected</span>
          </div>
          <button type="submit" class="btn btn-custom">Sign Up</button>
        </form>
      </div>
    </div>

    <%- include('./partials/script') %>

  <script>
  const form = document.getElementById("signupForm");
  const alertBox = document.getElementById("alert");
  const fileInput = document.getElementById("profileImage");
  const fileLabel = document.querySelector(".file-label");
  const fileNameDisplay = document.getElementById("fileName");

  // Show file name when selected
  fileInput.addEventListener("change", () => {
    fileNameDisplay.textContent = fileInput.files.length
      ? fileInput.files[0].name
      : "No file selected";
    fileLabel.style.boxShadow = "none";
  });

  // Validation
  form.addEventListener("submit", (e) => {
    let valid = true;
    alertBox.style.display = "none";

    // Reset styles
    document.querySelectorAll(".form-control").forEach((input) => {
      input.classList.remove("error");
    });
    fileLabel.style.boxShadow = "none";

    // Check text fields
    document.querySelectorAll(".form-control").forEach((input) => {
      if (!input.value.trim()) {
        input.classList.add("error");
        valid = false;
      }
    });

    // Check if image is uploaded
    if (!fileInput.files.length) {
      fileLabel.style.boxShadow = "0 0 10px #ff4d4d";
      valid = false;
    }

    if (!valid) {
      e.preventDefault();
      alertBox.style.display = "block";
    }
  });
</script>

  </body>
</html>
